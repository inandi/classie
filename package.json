{
  "name": "css-gps",
  "displayName": "CSS GPS",
  "description": "CSS GPS Extension",
  "version": "1.0.0",
  "publisher": "iNandi",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cssGps.ruleAlpha",
        "title": "Rule Alpha"
      },
      {
        "command": "cssGps.ruleBeta",
        "title": "Rule Beta"
      },
      {
        "command": "cssGps.ruleGamma",
        "title": "Rule Gamma"
      },
      {
        "command": "cssGps.customRules",
        "title": "Custom Rules..."
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "cssGps.submenu",
          "group": "cssGps@1",
          "when": "resourceExtname == .html || resourceExtname == .tpl || resourceExtname == .phtml"
        }
      ],
      "cssGps.submenu": [
        {
          "command": "cssGps.ruleAlpha",
          "group": "1_presetRules@1"
        },
        {
          "command": "cssGps.ruleBeta",
          "group": "1_presetRules@2"
        },
        {
          "command": "cssGps.ruleGamma",
          "group": "1_presetRules@3"
        },
        {
          "command": "cssGps.customRules",
          "group": "2_customRules@1"
        }
      ]
    },
    "submenus": [
      {
        "id": "cssGps.submenu",
        "label": "CSS GPS"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "typescript": "^4.9.0"
  }
}
