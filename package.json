{
  "name": "css-gps",
  "displayName": "CSS GPS",
  "description": "Automatically generates and inserts highly descriptive, hierarchical class names based on DOM structure and file location",
  "version": "1.0.0",
  "publisher": "iNandi",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "keywords": [
    "css",
    "class",
    "naming",
    "html",
    "dom",
    "hierarchy",
    "gps"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:php"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cssGps.rule1",
        "title": "Rule 1: Consolidated Path Naming"
      },
      {
        "command": "cssGps.rule2",
        "title": "Rule 2: (Coming Soon)"
      },
      {
        "command": "cssGps.rule3",
        "title": "Rule 3: (Coming Soon)"
      },
      {
        "command": "cssGps.scan",
        "title": "Scan & Validate Hierarchy"
      },
      {
        "command": "cssGps.manage",
        "title": "Manage Custom Rules..."
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "cssGps.submenu",
          "group": "cssGps@1",
          "when": "resourceExtname == .html || resourceExtname == .tpl || resourceExtname == .phtml"
        }
      ],
      "cssGps.submenu": [
        {
          "command": "cssGps.rule1",
          "group": "1_rules@1"
        },
        {
          "command": "cssGps.rule2",
          "group": "1_rules@2"
        },
        {
          "command": "cssGps.rule3",
          "group": "1_rules@3"
        },
        {
          "command": "cssGps.scan",
          "group": "2_scan@1"
        },
        {
          "command": "cssGps.manage",
          "group": "3_manage@1"
        }
      ]
    },
    "submenus": [
      {
        "id": "cssGps.submenu",
        "label": "CSS GPS"
      }
    ],
    "configuration": {
      "title": "CSS GPS",
      "properties": {
        "cssGps.addDataPath": {
          "type": "boolean",
          "default": true,
          "description": "Add css-gps--file-path attribute to elements (default: true)"
        },
        "cssGps.globalCustomRules": {
          "type": "array",
          "default": [],
          "description": "Global custom rules (applies to all projects)",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique rule identifier"
              },
              "name": {
                "type": "string",
                "description": "Rule display name"
              },
              "classFormat": {
                "type": "string",
                "description": "Class name format pattern"
              },
              "addDataPath": {
                "type": "boolean",
                "description": "Whether to add css-gps--file-path attribute"
              },
              "enabled": {
                "type": "boolean",
                "description": "Whether the rule is enabled"
              }
            }
          }
        },
        "cssGps.localCustomRules": {
          "type": "array",
          "default": [],
          "description": "Project-specific custom rules",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique rule identifier"
              },
              "name": {
                "type": "string",
                "description": "Rule display name"
              },
              "classFormat": {
                "type": "string",
                "description": "Class name format pattern"
              },
              "addDataPath": {
                "type": "boolean",
                "description": "Whether to add css-gps--file-path attribute"
              },
              "enabled": {
                "type": "boolean",
                "description": "Whether the rule is enabled"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "node-html-parser": "^6.1.0"
  }
}
